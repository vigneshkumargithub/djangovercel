{
    "builds": [
        {
            "src": "school_app/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
        }
    ],
    "functions": {
        "school_app/*.py": {
            "includeFiles": ["school_app/**/*"],
            "excludeFiles": ["**/__pycache__/**/*", "**/*.pyc", "tests/**/*", "*.md"]
        }
    },
    "routes": [
        {
            "src": "/(.*)",
            "dest": "school_app/wsgi.py"
        }
    ]
}
